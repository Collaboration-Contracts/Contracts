<!DOCTYPE html>
<html>
  <head>
    <title>Collaboration Contracts</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Compiled and minified CSS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
  </head>

  <body>
    <div class="row" id="entire-page">
      <div class="col s2">
        <div class="sidemenu">
          <div class="title-corner">
            <i class="far fa-handshake fa-3x"></i>
            <div>
              <p class="caption-font">Collaboration<br>Contracts</p>
            </div>
          </div>
          <div class="sidemenu-content">

          </div>
        </div>
      </div>
      <div class="col s10">
        <div class="top-nav">
          <div class="avatar-corner">
            <p>Username</p>
            <%= image_tag "default_avatar.png", class: "responsive-img" %>
          </div>
        </div>
        <div class="main-container">
          <% flash[:danger] && flash[:danger].each do |msg| %>
            <p class="danger flash_message">
              <i class="fas fa-exclamation-circle fa-2x"></i><%= msg %>
            </p>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
