<!DOCTYPE html>
<html>
  <head>
    <title>Collaboration Contracts</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Compiled and minified CSS -->
    <script defer="defer" src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
  </head>

  <body>
    <div id="entire-page">

      <div class="row" id="nav-bar">
        <div class="title-corner sidemenu col s2">
          <a href="/">
            <i class="far fa-handshake fa-3x"></i>
          </a>
          <div>
            <p class="caption-font">Collaboration Contracts</p>
          </div>
        </div>
        <div class="top-nav col s10">
          <h1 class="page-title"><%= @page_title %></h1>
          <div class="avatar-corner">
            <p><%= current_username %></p>
            <%= image_tag "default_avatar.png", class: "responsive-img" %>
          </div>
        </div>
      </div>

      <div class="row" id="main-body">
        <div class="col s2">
          <div class="sidemenu-content">
            <% unless current_user %>
              <div class="user-links">
                <%= render 'partials/login_modal' unless on_login? %>
                <%= or?.html_safe %>
                <%= (render 'partials/reg_modal', :@user => @user) unless on_reg? %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col s10">
          <div class="main-container">
            <%= render "partials/flash" %>
            <%= yield %>
          </div>
        </div>
      </div>

    </div>
  </body>
  <script>
    $('.sidemenu-content').css('height', $('#main-body').height())
  </script>
</html
